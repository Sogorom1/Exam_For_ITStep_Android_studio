<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Concert Tickets"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/book_concert1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Chase atlantic" />
        <TextView
            android:id="@+id/concert1_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tickets: 0"
            android:layout_gravity="center"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/book_concert2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="The Weeknd" />
        <TextView
            android:id="@+id/concert2_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tickets: 0"
            android:layout_gravity="center"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/book_concert3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Artic Monkeys" />
        <TextView
            android:id="@+id/concert3_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tickets: 0"
            android:layout_gravity="center"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>